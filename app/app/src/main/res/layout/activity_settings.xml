<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Location Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                style="@style/SettingsHeader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <RadioGroup
                    android:id="@+id/location_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/location_gps_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPS"
                        style="@style/SettingsRadioButton"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/location_map_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        style="@style/SettingsRadioButton" />
                </RadioGroup>
            </LinearLayout>

            <!-- Language Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Language"
                style="@style/SettingsHeader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <RadioGroup
                    android:id="@+id/language_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/language_english_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English"
                        style="@style/SettingsRadioButton"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/language_arabic_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arabic"
                        style="@style/SettingsRadioButton" />
                </RadioGroup>
            </LinearLayout>

            <!-- Temperature Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature"
                style="@style/SettingsHeader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <RadioGroup
                    android:id="@+id/temperature_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/temperature_celsius_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Celsius"
                        style="@style/SettingsRadioButton"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/temperature_kelvin_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kelvin"
                        style="@style/SettingsRadioButton" />
                    <RadioButton
                        android:id="@+id/temperature_fahrenheit_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fahrenheit"
                        style="@style/SettingsRadioButton" />
                </RadioGroup>
            </LinearLayout>

            <!-- Wind Speed Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wind Speed"
                style="@style/SettingsHeader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <RadioGroup
                    android:id="@+id/wind_speed_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/wind_speed_ms_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meter / Sec"
                        style="@style/SettingsRadioButton"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/wind_speed_mph_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mile / Hour"
                        style="@style/SettingsRadioButton" />
                </RadioGroup>
            </LinearLayout>

            <!-- Notifications Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                style="@style/SettingsHeader" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <RadioGroup
                    android:id="@+id/notifications_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/notifications_enable_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable"
                        style="@style/SettingsRadioButton"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/notifications_disable_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disable"
                        style="@style/SettingsRadioButton" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>