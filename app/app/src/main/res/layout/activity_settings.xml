<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Location Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp">

                <RadioGroup
                    android:id="@+id/location_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/location_gps_radio"
                        style="@style/SettingsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/gps" />

                    <RadioButton
                        android:id="@+id/location_map_radio"
                        style="@style/SettingsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/map" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                style="@style/SettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/language" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp">

                <RadioGroup
                    android:id="@+id/languageRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/language_system_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/follow_system" />

                    <RadioButton
                        android:id="@+id/language_english_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/english" />

                    <RadioButton
                        android:id="@+id/language_arabic_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/arabic" />
                </RadioGroup>
            </LinearLayout>

            <!-- Temperature Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/temperature" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp">

                <RadioGroup
                    android:id="@+id/temperature_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/temperature_celsius_radio"
                        style="@style/SettingsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/celsius" />

                    <RadioButton
                        android:id="@+id/temperature_kelvin_radio"
                        style="@style/SettingsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kelvin" />

                    <RadioButton
                        android:id="@+id/temperature_fahrenheit_radio"
                        style="@style/SettingsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fahrenheit" />
                </RadioGroup>
            </LinearLayout>

            <!-- Wind Speed Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wind_speed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp">

                <RadioGroup
                    android:id="@+id/wind_speed_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/wind_speed_ms_radio"
                        style="@style/SettingsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/meter_sec" />

                    <RadioButton
                        android:id="@+id/wind_speed_mph_radio"
                        style="@style/SettingsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mile_hour" />
                </RadioGroup>
            </LinearLayout>

            <!-- Notifications Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notifications" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/dark_gray"
                android:orientation="vertical"
                android:padding="8dp">

                <RadioGroup
                    android:id="@+id/notifications_radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/notifications_enable_radio"
                        style="@style/SettingsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/enable" />

                    <RadioButton
                        android:id="@+id/notifications_disable_radio"
                        style="@style/SettingsRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disable" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>