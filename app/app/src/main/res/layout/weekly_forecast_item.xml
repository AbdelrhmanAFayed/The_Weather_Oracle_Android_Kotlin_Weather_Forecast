<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/card_gradient"
    android:padding="12dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/weekDayLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowRadius="1"
        app:layout_constraintEnd_toStartOf="@+id/weekIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Friday" />

    <ImageView
        android:id="@+id/weekIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/weather_icon"
        app:layout_constraintEnd_toStartOf="@+id/weekTempRange"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/weatherlogo" />

    <TextView
        android:id="@+id/weekTempRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:shadowColor="#80000000"
        android:shadowRadius="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="300K - 305K" />

</androidx.constraintlayout.widget.ConstraintLayout>